       {{!-- {{#with car}} --}}
      <h1>{{car.name}}</h1>
      <img class="cube" src="{{car.imageUrl}}">
      <div class="details">
        <p><span>Description:</span> {{car.description}}</p>
        <p><span>Price:</span> {{car.price}}</p>
        <a class="btn" href="/">Back</a>
            <a class="btn" href="/attach/{{car.id}}">Attach Accessory</a>
         <a class="btn" href="/edit/{{car.id}}">Edit</a>
        <a class="btn" href="/delete/{{car.id}}">Delete</a>
      </div>
      {{!-- {{/with}} --}}

       <h2>Accessories</h2>
     {{#each car.accessories}}
     {{> accessory }}
       <div class="accessories">
          {{else}}
        <h3 class="italic">This vehicle has no accessories yet...</h3>
     {{/each}}
       </div>