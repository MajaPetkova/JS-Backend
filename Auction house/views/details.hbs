<!-- Details Page -->
<section id="catalog-section">

      
  <h1 class="item">
    {{auction.title}}
           {{#if auction.isOwner}}
    <div class="f-right">
      <a class="action pad-small f-left" href="/edit/{{auction._id}}">Edit</a>
      <a class="action pad-small f-left" href="/delete/{{auction._id}}">Delete</a>
    </div>
    {{/if}}
  
  </h1>
  <div class="item padded">

    <div class="layout right large">

      <div class="col">
        <img src="{{auction.image}}" class="img-large" />
      </div>

      <div class="content pad-med">

        <p>In category: <strong>{{auction.category}}</strong></p>
        <p>{{auction.details}}</p>

        <div class="align-center">
          <div>
            Current price: $<strong>{{auction.price}}</strong>
          </div>

         {{#if auction.hasUser}}
          <!-- If current user can place a bid -->
          <form class="vertical" method="POST" action="/bidding/{{auction._id}}">
            <label><span>Bid amount</span><input
                type="number"
                name="amount"
              /></label>
            <input class="action" type="submit" value="Place bid" />
          </form>
        {{else}}
          <!-- If current user is the bidder -->
          <div>
            You are currently the
            <strong>highest bidder</strong>
            for this auction
          </div>
        {{/if}}
        </div>
      </div>
    </div>

    <footer>Listed by Peter Jackson</footer>
  </div>

</section>