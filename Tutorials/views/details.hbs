{{#with course}}
            <div class="container">
                <h1 class="my-4">Title : {{title}}
                </h1>

                <div class="row">

                    <div class="col-md-8">
                        <img class="img-fluid"
                            src="{{imageUrl}}"
                            alt="JavaScript" />
                    </div>

                    <div class="col-md-4 text-center">
                        <h4 class="my-3">Duration</h4>
                        <p>{{duration}}</p>
                        <h3 class="my-3">Description</h3>
                        <p>{{description}}</p>
       {{/with}}

                      {{#if course.hasUser}}
                      {{#if course.isOwner}}
                        <a class="btn btn-warning" href="/">Edit</a>
                        <a class="btn btn-danger" href="/">Delete</a>
                          {{else}}
                        <span class="enrolled-span">You are already enrolled</span>
                        <a class="btn btn-primary" href="/">Enroll</a>
                        {{/if}}
                       {{/if}}
                    </div>
                </div>
            </div>